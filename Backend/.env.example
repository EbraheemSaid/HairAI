# HairAI Production Environment Variables
# Copy this file to .env and fill in real values for production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hairai_production
DB_USER=hairai_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=hairai_user
RABBITMQ_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHARACTER_STRING_FOR_PRODUCTION
JWT_ISSUER=HairAI-Production
JWT_AUDIENCE=HairAIUsers-Production
JWT_EXPIRE_HOURS=24

# External Service API Keys
PAYMOB_API_KEY=your_real_paymob_api_key_here
PAYMOB_INTEGRATION_ID=your_real_paymob_integration_id_here
SENDGRID_API_KEY=your_real_sendgrid_api_key_here

# Application Configuration
ALLOWED_HOSTS=yourdomain.com;*.yourdomain.com
ASPNETCORE_ENVIRONMENT=Production

# Security Configuration
CORS_ORIGINS=https://yourdomain.com;https://admin.yourdomain.com

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/var/log/hairai/

# Connection Pool Settings
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=5

# Redis Cache (if used)
REDIS_CONNECTION_STRING=localhost:6379

# File Storage
STORAGE_CONNECTION_STRING=your_blob_storage_connection_string
STORAGE_CONTAINER_NAME=hairai-images

# Monitoring
HEALTH_CHECK_TIMEOUT=30

# IMPORTANT SECURITY NOTES:
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate JWT secret key regularly
# 4. Use HTTPS in production
# 5. Restrict database access to application server only 