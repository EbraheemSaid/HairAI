{
  "name": "hairai-platform",
  "version": "1.0.0",
  "description": "A hardware-agnostic, AI-powered hair analysis SaaS platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:backend": "cd Backend && dotnet watch run",
    "dev:frontend": "cd Frontend/App && npm run dev",
    "dev:admin": "cd Frontend/AdminDashboard && npm run dev",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\" \"npm run build:admin\"",
    "build:backend": "cd Backend && dotnet build",
    "build:frontend": "cd Frontend/App && npm run build",
    "build:admin": "cd Frontend/AdminDashboard && npm run build",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\" \"npm run test:admin\"",
    "test:backend": "cd Backend && dotnet test",
    "test:frontend": "cd Frontend/App && npm run test",
    "test:admin": "cd Frontend/AdminDashboard && npm run test",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:admin\"",
    "lint:frontend": "cd Frontend/App && npm run lint",
    "lint:admin": "cd Frontend/AdminDashboard && npm run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "hair-analysis",
    "trichology",
    "ai",
    "saas",
    "medical",
    "healthcare"
  ],
  "author": "HairAI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}